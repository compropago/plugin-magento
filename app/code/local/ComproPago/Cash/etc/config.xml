<?xml version="1.0"?>
<config>
    <modules>
        <ComproPago_Cash>
            <version>2.2.0.0</version>
        </ComproPago_Cash>
    </modules>

    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <custom_field_one>
                    <to_order_payment>*</to_order_payment>
                </custom_field_one>
                <custom_field_two>
                    <to_order_payment>*</to_order_payment>
                </custom_field_two>
            </sales_convert_quote_payment>
        </fieldsets>

        <blocks>
            <cash>
                <class>ComproPago_Cash_Block</class>
            </cash>
        </blocks>
        <helpers>
            <cash>
                <class>ComproPago_Cash_Helper</class>
            </cash>
        </helpers>
        <models>
            <cash>
                <class>ComproPago_Cash_Model</class>
            </cash>
        </models>

        <resources>
            <cash_setup>
                <setup>
                    <module>ComproPago_Cash</module>
                </setup>
            </cash_setup>
        </resources>

        <events>
            <admin_system_config_changed_section_payment>
                <observers>
                    <cash_retro>
                        <class>cash/observer</class>
                        <method>retro</method>
                    </cash_retro>
                </observers>
            </admin_system_config_changed_section_payment>
        </events>
    </global>

    <frontend>
        <layout>
            <updates>
                <compropago_cash>
                    <file>cash.xml</file>
                </compropago_cash>
            </updates>
        </layout>
    </frontend>

    <default>
        <payment>
            <cash>
                <active>1</active>
                <model>cash/cash</model>
                <title>Pago en efectivo</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
                <sort_order>1</sort_order>
            </cash>
        </payment>
    </default>
</config>