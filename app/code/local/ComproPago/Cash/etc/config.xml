<?xml version="1.0"?>
<config>
    <modules>
        <ComproPago_Cash>
            <version>2.3.0.0</version>
        </ComproPago_Cash>
    </modules>

    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <custom_field_one>
                    <to_order_payment>*</to_order_payment>
                </custom_field_one>
                <custom_field_two>
                    <to_order_payment>*</to_order_payment>
                </custom_field_two>
            </sales_convert_quote_payment>
        </fieldsets>

        <blocks>
            <cash>
                <class>ComproPago_Cash_Block</class>
            </cash>
        </blocks>

        <helpers>
            <cash>
                <class>ComproPago_Cash_Helper</class>
            </cash>
        </helpers>

        <models>
            <cash>
                <class>ComproPago_Cash_Model</class>
            </cash>
        </models>

        <events>
            <sales_order_payment_place_end>
                <observers>
                    <cash>
                        <class>cash/observer</class>
                        <method>setAdditionalInformation</method>
                    </cash>
                </observers>
            </sales_order_payment_place_end>
        </events>
    </global>

    <frontend>
        <layout>
            <updates>
                <compropago_cash>
                    <file>cash.xml</file>
                </compropago_cash>
            </updates>
        </layout>
    </frontend>

    <default>
        <payment>
            <cash>
                <active>1</active>
                <model>cash/cash</model>
                <title>Pago en efectivo</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
                <sort_order>1</sort_order>
            </cash>
        </payment>
    </default>
</config>